<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE urlrewrite
        PUBLIC "-//tuckey.org//DTD UrlRewrite 3.0//EN"
        "http://tuckey.org/res/dtds/urlrewrite3.0.dtd">
<urlrewrite>
	
	<!-- 首页 -->
	<rule>
		<from>^/index.html|^/index.htm</from>
		<to>index.action</to>
	</rule>
	
	<!-- 文章页 -->
	<rule>
		<from>^/post/([0-9]+).html$</from>
		<to>single.action?id=$1</to>
	</rule>
	<rule>
		<from>^/post/([0-9]+).htm$</from>
		<to>single.action?id=$1</to>
	</rule>
	
	<!-- 搜索 -->
	<rule>
		<from>^/search.html|^/search.htm</from>
		<to>search.action</to>
	</rule>
	
	<!-- 相册 -->
	<rule>
		<from>^/album.html|^/album.htm</from>
		<to>album.action</to>
	</rule>
	
	<!-- 分页 -->
	<rule>
		<from>^/page/([0-9]+)$</from>
		<to>index.action?articlePage.pageNo=$1</to>
	</rule>
	<rule>
		<from>^/page/([0-9]+)/$</from>
		<to>index.action?articlePage.pageNo=$1</to>
	</rule>
	
	<!-- 分类 -->
	<rule>
		<from>^/category/([0-9]+)$</from>
		<to>index.action?article.category.id=$1</to>
	</rule>
	<rule>
		<from>^/category/([0-9]+)/$</from>
		<to>index.action?article.category.id=$1</to>
	</rule>
	
	<!-- 分类/分页 -->
	<rule>
		<from>^/category/([0-9]+)/page/([0-9]+)$</from>
		<to>index.action?article.category.id=$1&amp;articlePage.pageNo=$2</to>
	</rule>
	<rule>
		<from>^/category/([0-9]+)/page/([0-9]+)/$</from>
		<to>index.action?article.category.id=$1&amp;articlePage.pageNo=$2</to>
	</rule>
</urlrewrite>